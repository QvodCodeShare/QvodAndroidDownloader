<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/home_title_bg"
    android:gravity="center" >

    <ImageView
        android:id="@+id/rotateAnim"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:src="@drawable/home_restart_1"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/flickerAnim"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:src="@drawable/home_restart_2"
        android:visibility="gone" />

    <com.qvod.lib.demo.widget.UpgradeProgressBar
        android:id="@+id/upgrade_progress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:background="@drawable/home_upgrade_background"
        android:indeterminateDrawable="@drawable/home_upgrade_progress"
        android:max="100"
        android:visibility="visible" />

    <Button
        android:id="@+id/btn_updrade"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/home_btn_normal"
        android:gravity="center"
        android:textColor="@color/white"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/tv_update_tip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="220dp"
        android:textColor="@color/white"
        android:textSize="15sp" />

</RelativeLayout>